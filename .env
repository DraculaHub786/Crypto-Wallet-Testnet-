# ==== Flask App Config ====
FLASK_ENV=development
FLASK_DEBUG=1
PORT=5000

# ==== Logging & Security ====
# Set to 0 in dev so logging works without a secret header
REQUIRE_AUTH=0
# Set this for production to require secret header
LOG_SECRET=my_secret_token

# Optional stronger protection (uncomment if using HMAC mode)
# LOG_HMAC_SECRET=my_super_strong_key

# ==== Allowed Origins for CORS ====
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# ==== Data Storage ====
DATA_DIR=data
